<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
    <body>
        <div class="page-wrap">
            <header>
                <h1>Fluent Web API</h1>
            </header>
            <main>
                @RenderBody()
            </main>
        </div>
        <footer class="site-footer">
            <p class="text-center">&copy; @DateTime.Now.Year - Fluent Web API</p>
        </footer>
        @RenderSection("scripts", required: false)
    </body>
</html>
